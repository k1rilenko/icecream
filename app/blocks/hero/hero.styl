.hero
	display block
	position relative
	background-color #FFF
	.swiper-container 
		padding-top: 4rem;
	+above($xl)
		padding-bottom 5rem
		&:before
			position absolute
			content ''
			background linear-gradient(180deg, rgba(255, 255, 255, 0) 30.56%, rgba(0, 130, 223, .65) 100%)
			opacity .5
			top 0
			left 0
			width 100%
			height 100%
			z-index 1
		&:after
			position absolute
			content ''
			background url(../images/heroes/hero_wave.svg) center no-repeat
			background-size cover
			opacity 1
			bottom -5px
			left 0
			width 100%
			height 15rem
			z-index 4
	&__container
		overflow hidden
		position relative
		+below($xl)
			&:after
				position absolute
				content ''
				border-radius 50%
				background $rifleniu
				width 89px
				height 89px
				top 20px
				right -35px
				filter blur(7px)
	&__title
		padding-top 10rem
		padding-bottom 2.4rem
		position relative
		z-index 1
	&__wrap
		position relative
		z-index 1
		+below($xl)
			&:before
			&:after
				position absolute
				content ''
				border-radius 50%
				background $rifleniu
			&:before
				width 37px
				height 37px
				top 120px
				left -10px
			&:after
				top 35px
				left 80px
				width 15px
				height 15px
	&__slider
		+above($lg)
			max-width 900px
			margin 0 auto
		+above($xl)
			max-width 1300px
		+above($xxl)
			max-width 1600px
		.swiper
			&-button
				display none
				+above($xl)
					display flex
					justify-content center
					align-items center
					width 6rem
					height 6rem
					border-radius 50%
					background $w
					transition .3s
					box-shadow 0 5px 15px transparent
					&:after
						display none
					&.swiper-button-prev
						transform scale(-1, 1)
					&.swiper-button-next
						.icon
							margin-left 4px
					&:hover
						background linear-gradient(283.38deg, #008EF4 0, #63D4FF 100%, #63D4FF 100%)
						box-shadow 0 5px 15px rgba(44, 173, 250, .37)
						border-color $w
						.icon
							stroke $w
			&-wrapper
				+below($xl)
					box-sizing border-box
					flex-wrap wrap
			&-slide
				display block
				width 20%
				transition .3s
				border-radius 2rem
				+below($xl)
					width 50%
					margin-bottom 5.5rem
					&:first-child
						width 100%
						.hero__image-wrap
							width 18rem
							height 18rem
						.hero__value
							max-width 18rem
						.hero__wrapper
							padding-top 4rem
						.hero__name
							max-width 22rem
							left 50%
							transform translateX(-50%)
				+above($xl)
					&:not(.swiper-slide-prev):not(.swiper-slide-next):not(.swiper-slide-nth-prev-2):not(.swiper-slide-nth-next-2):not(.swiper-slide-active)
						transform scale(0)
						opacity 0
					.hero__wrapper
						height 32rem
					&.swiper-slide-active
						z-index 3
						box-shadow 0 30px 30px 10px rgba(0, 0, 0, .3)
						transform scale(1.2)
						margin-top 2rem
						margin-bottom -4rem
					&.swiper-slide-prev
						margin-right -2rem
						margin-left 2rem
					&.swiper-slide-next
						margin-left -2rem
						margin-right 2rem
					&.swiper-slide-nth-prev-2
						margin-right -20rem
						margin-left 20rem
					&.swiper-slide-nth-next-2
						margin-left -20rem
						margin-right 20rem
					&.swiper-slide-prev, &.swiper-slide-next
						transform translateY(3rem)
						box-shadow 0 30px 30px 10px rgba(0, 0, 0, .3)
						z-index 2
						&:before, &:after
							top 5rem
					&.swiper-slide-nth-prev-2, &.swiper-slide-nth-next-2
						transform translateY(8rem)
						z-index 1
					&.swiper-slide-nth-prev-2
						&:after
							top 8rem
					&.swiper-slide-nth-next-2
						&:before
							top 8rem
				+above($xxl)
					.hero__wrapper
						height 38rem
						width 100%
					&.swiper-slide-prev
						margin-right -5rem
						margin-left 5rem
					&.swiper-slide-next
						margin-left -5rem
						margin-right 5rem
					&.swiper-slide-nth-prev-2
						margin-right -15rem
						margin-left 15rem
					&.swiper-slide-nth-next-2
						margin-left -15rem
						margin-right 15rem
	&__container
		padding 0 1.5rem
	&__item
		display block
		+below($xl)
			&_capitan
				.hero__image-wrap
					background $capitan
			&_hrust
				.hero__image-wrap
					background $hrust
			&_eskimon
				.hero__image-wrap
					background $eskimon
			&_kaktus
				.hero__image-wrap
					background $kaktus
			&_lakomka
				.hero__image-wrap
					background $lakomka
			&_plombirovna
				.hero__image-wrap
					background $plombirovna
			&_raduga
				.hero__image-wrap
					background $raduga
				.hero__value
					max-height 16rem
			&_rifleniu
				.hero__image-wrap
					background $rifleniu
			&_rojoker
				.hero__image-wrap
					background $rojoker
		+above($xl)
			padding 40px 5px
			border-radius 20px
			&_capitan
				background $capitan
			&_hrust
					background $hrust
			&_eskimon
					background $eskimon
			&_kaktus
					background $kaktus
			&_lakomka
					background $lakomka
			&_plombirovna
					background $plombirovna
			&_raduga
					background $raduga
				.hero__value
					max-height 16rem
			&_rifleniu
					background $rifleniu
			&_rojoker
					background $rojoker
			.hero__value
				+above($xl)
					max-width 100%
					max-height 100%
	&__image-wrap
		width 13rem
		height 13rem
		border-radius 50%
		position relative
		margin 0 auto
		+above($xl)
			width 100%
			height 100%
	&__image-block
		width 100%
		height 100%
		overflow hidden
	&__value
		position absolute
		max-width 13rem
		bottom 0
		left 50%
		transform translateX(-50%)
	&__name
		position absolute
		max-width 140px
		z-index 2
		bottom 0
		+below($xl)
			bottom -1.5rem
		+above($xl)
			max-width 90%
			top -2rem
			left 50%
			transform translateX(-50%)
	&__image-wrap_capitan
		.hero__name
			+below($xl)
				bottom -3.5rem
