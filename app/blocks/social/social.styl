.social
	display block
	&__list
		display flex
		border 2px solid $grey
	&__item
		width 25%
		border-right 2px solid $grey
	&__link
		display flex
		width 100%
		height 100%
		justify-content center
		align-items center
		padding 4rem 0
		transition .3s
		&:hover
			background $grey
		+above($xl)
			padding 5rem 0