.sprite
	display block

.icon
	&_back
		stroke $b
		width 13px
		height 16px
	&_link
		stroke $blue
		width 13px
		height 16px
	&_list
		width 13px
		height 16px
	&_mail
		width 22px
		height 18px
		+above($xl)
			width 24px
			height 24px		
	&_phone
		width 20px
		height 20px
		+above($xl)
			width 24px
			height 24px		
	&_globe
		width 22px
		height 22px
		+above($xl)
			width 24px
			height 24px		
	&_inst
		width 20px
		height 20px
	&_youtube
		width 26px
		height 18px
	&_fb
		width 20px
		height 20px
	&_vk
		width 20px
		height 20px
	&_close
		width 16px
		height 16px
	&_wave
		width 100%
		height 75px
	&_arrow
		width 16px
		height 14px
		&.rotate-left
			transform rotate(-90deg)
		&.rotate-right
			transform rotate(90deg)
