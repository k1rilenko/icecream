include /blocks/gift-list/gift-list
mixin gift-popup(gifts)
	+b.gift-popup&attributes(attributes)
		+e.container
			+e.item.gift-popup-slider
				.swiper-container
					.swiper-wrapper
						for item, index in getData('gifts')
							.swiper-slide(id="gift_#{index}" data-slide-index="#{index}")
								+e.wrapper 
									+e('button').close.button_close(data-fancybox-close)
										+b('svg').icon_close
											use(xlink:href="#close")
									+e.image
										+e.image-block
											+e('img').image-value(src="./assets/images/gifts/#{item.num}.jpg")
									.swiper-pagination
									+e.description
										+b.description-text
											+e('p').title.title #{item.title}
											+e('p').text #{item.fullText}
										+b.description-details
											+e.value-wrapper
												+e('p').points #{item.points}
												+e('p').units баллов
											+e.button-wrapper
												+e('button').button.button_success Получить

				.swiper-button-prev.swiper-button
					+b('svg').icon._link
						use(xlink:href='#link-arrow')
				.swiper-button-next.swiper-button
					+b('svg').icon._link
						use(xlink:href='#link-arrow') 
		+gift-list