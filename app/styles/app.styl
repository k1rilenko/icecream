import('sprites/*')
import('helpers/svg-size')
@import 'helpers/variables'
@import 'helpers/mixins'
@import 'helpers/fonts'
@import 'helpers/optimize'




.title
	font-family $bor
	font-size 3.5rem
	line-height 1.14
	color $b
	text-align center
	+above($xl)
		font-size 4.5rem
	&_white
		color $w
.sub
	font-family $bor
	font-size 2.2rem
	line-height 1.14
	color $b
	text-align center
	+above($xl)
		max-width 55%

.container
	padding 0 1.5rem
	+above($xl)
		padding 0 5rem

.button
	outline none
	background-color transparent
	border none
	&_circle
		position relative
		width 50px
		height 50px
		border-radius 50%
		box-shadow 0 2px 5px rgba(0, 79, 136, .2)
		border none
		.icon_back
			position absolute
			left 50%
			top 50%
			transform translate(-68%, -50%)
	&_nav
		position absolute
		display inline-block
		border 2px solid $w
		border-radius 50%
		width 60px
		height 60px
		.icon_link
			position absolute
			left 50%
			top 50%
			transform translate(-50%, -50%)
			stroke $w
	&_close
		padding 10px
	&_success
		font-size 2.2rem
		line-height 2.5rem
		font-family $bor
		color $w
		position relative
		padding 2.1rem 4rem 1.4rem
		min-width 16rem
		display flex
		justify-content center
		align-items center
		border-radius 30px
		background transparent
		overflow hidden
		box-shadow 0 5px 15px rgba(44, 173, 250, .37)
		z-index 1
		&:before, &:after
			content ''
			display block
			width 100%
			height 100%
			position absolute
			top 0
			transition .5s
			z-index -1
		&:before
			left 0
			background linear-gradient(81.27deg, #008EF4 0%, #63D4FF 100%, #008EF4 150%)
		&:after
			left 100%
			background linear-gradient(302.38deg, #008EF4 0%, #63D4FF 100%, #63D4FF 100%)
		&:hover
			&:before, &:after
				transform translateX(-100%)
		+above($xl)
			width 22rem


.gradient
	&_hrust
		background $hrust
	&_eskimon
		background $eskimon
	&_raduga
		background $raduga
	&_kaktus
		background $kaktus
	&_capitan
		background $capitan
	&_rojoker
		background $rojoker
	&_rifleniu
		background $rifleniu
	&_plombirovna
		background $plombirovna
	&_lakomka
		background $lakomka

.sphere
	display inline-block
	border-radius 50%
	position absolute
	&_blur
		filter blur(20px)
	&_sm
		width 2.6rem
		height 2.6rem
		right 8.8rem
		bottom 8rem
		transform rotate(-75deg)
	&_lg
		width 4.2rem
		height 4.2rem
		transform rotate(-75deg)
		top 8.8rem
		left 10rem
	&_xxl
		width 13.4rem
		height 13.4rem
		left -4.6rem
		bottom 4rem
		transform rotate(90deg)
	&_s
		width 1.5rem
		height 1.5rem
		right 9.5rem
		bottom 9.5rem
		transform rotate(90deg)
	&_m
		width 3.7rem
		height 3.7rem
		transform rotate(-75deg)
		top 8.8rem
		left 5.7rem
	&_xl
		width 11.4rem
		height 11.4rem
		right -5.4rem
		top 6.8rem
		transform rotate(90deg)




.hidden
	position absolute
.form
	&__input
		width 100%
		border-radius 30px
		border 2px solid $grey
		color $b
		font-size 1.8rem
		line-height 2
		padding 1rem 2.5rem
		&_checkbox
			position absolute
			opacity 0
			z-index -1
			&:checked
				+ .form__label
					&::after
						opacity 1
		&::placeholder
			color $dgrey
		&-wrapper
			margin-bottom 1rem
			&_checkbox
				position relative
	&__wrapper
		margin-top 3rem
	&__button-wrapper
		padding-top 1rem
		display flex
		justify-content center
	&__link-wrapper
		display flex
		justify-content center
		padding-top 2rem
	&__link
		position relative
		text-decoration none
		font-size 1.4rem
		line-height 1.43
		color $blue
		font-weight 700
		&:after
			content ''
			position absolute
			width 100%
			height 2px
			background-color $blue
			left 0
			bottom 0
			border-radius 20px
	&__label
		display inline-block
		padding-left 4rem
		position relative
		font-size 1.4rem
		line-height 1.43
		font-weight 700
		&::before
			position absolute
			content ''
			left 0
			width 20px
			height 20px
			border 3px solid $blue
			border-radius 2px
			box-sizing border-box
		&::after
			content ''
			position absolute
			width 8px
			height 8px
			border-radius 1px
			background-color $blue
			left 6px
			top 6px
			opacity 0
	&__checkbox-block
		padding-top 4rem
	&__title
		font-weight 500
		font-size 2rem
		line-height 1.5
		text-align center
		margin-bottom 2.2rem
	&_forgot
		.form__wrapper
			margin-top 1rem
import('../blocks/**/*')
